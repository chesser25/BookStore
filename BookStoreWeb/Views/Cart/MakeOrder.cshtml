@model BookStoreDomainModel.Entities.Order

@{
    ViewBag.Title = "BookStore: order form";
}

<h2>Make an order now</h2>
<p>Please enter your contact data and you'll get goods!</p>

@using (Html.BeginForm("Checkout", "Cart"))
{
    @Html.ValidationSummary()
    <h3>Data</h3>
    <div class="form-group">
        <label>Your name:</label>
        @Html.TextBoxFor(order => order.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Your street address:</label>
        @Html.TextBoxFor(order => order.Street, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Your home address:</label>
        @Html.TextBoxFor(order => order.HomeNumber, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Your city:</label>
        @Html.TextBoxFor(order => order.City, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Your country:</label>
        @Html.TextBoxFor(order => order.Country, new { @class = "form-control" })
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Process order"/> 
    </div>
}
