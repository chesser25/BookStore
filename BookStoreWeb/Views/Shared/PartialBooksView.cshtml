@model BookStoreDomainModel.Entities.Book

<div class="well">
    <h3>
        <strong>@Model.Name</strong>
        <span class="pull-right label label-primary">@Model.Price.ToString("# Dollars")</span>
    </h3>
    @using (Html.BeginForm("AddItemToCart", "Cart"))
    {
        <div class="pull-right">
            @Html.HiddenFor(x => x.Id)
            @Html.Hidden("returnUri", Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-success" value="Add to Cart">
        </div>
    }

    <span class="lead">@Model.Description</span>
</div>

